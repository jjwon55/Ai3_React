<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.aloha.boards.mapper.BoardMapper">

    <resultMap type="Boards" id="BoardMap">
        <id property="no" column="no" />
        <result property="no" column="no" />
        <result property="id" column="id" />
        <result property="title" column="title" />
        <result property="writer" column="writer" />
        <result property="content" column="content" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />

        <association property="file" column="no" javaType="Files" select="selectMainFile"></association>
    </resultMap>

    <!-- 메인(썸네일) 파일 조회 -->
    <select id="selectMainFile" resultType="Files">
        SELECT * 
        FROM files
        WHERE p_no = #{no}
            AND P_table = 'boards'
            AND TYPE = 'MAIN'
    </select>


    <select id="list" resultMap="BoardMap">
        SELECT *
        FROM boards
    </select>

    <!-- ⚡ 페이징 처리 후 정렬을 적용 -->
    <!-- 이유 : 정렬 후 페이징 하면, 완료 안 된 것만 앞으로 나오니까
                페이징 후 정렬을 적용 합니다.
    -->

    <select id="select" resultType="Boards">
        SELECT *
        FROM boards
        WHERE no = #{no}
    </select>

    <select id="selectById" resultType="Boards">
        SELECT *
        FROM boards
        WHERE id = #{id}
    </select>

    <!-- ✨ 자동증가된(AI) boards의 no 를 Boards 객체의 no 변수에 넣어준다.  -->
    <insert id="insert" parameterType="Boards" useGeneratedKeys="true" keyProperty="no">
        INSERT INTO boards (id, title, writer, content)
        VALUES (#{id}, #{title}, #{writer}, #{content})
    </insert>

    <update id="update">
        UPDATE boards
        <set>
            <if test="title != null">
                title = #{title}, 
            </if>
            <if test="content != null">
                content = #{content}, 
            </if>
            <if test="writer != null">
                writer = #{writer}, 
            </if>
                updated_at = now()
        </set>
        WHERE no = #{no}
    </update>
    
    <update id="updateById">
        UPDATE boards
        <set>
            <if test="title != null">
                title = #{title}, 
            </if>
            <if test="content != null">
                content = #{content}, 
            </if>
            <if test="writer != null">
                writer = #{writer}, 
            </if>
                updated_at = now()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM boards
        WHERE no = #{no}
    </delete>

    <delete id="deleteById">
        DELETE FROM boards
        WHERE id = #{id}
    </delete>



</mapper>